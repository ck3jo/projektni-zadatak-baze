<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import java.net.URL?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<?import javafx.scene.layout.Region?>

<VBox alignment="CENTER"
      spacing="20.0"
      xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="project.databasegui.MainController"
      id="main-window">

    <Label text="Aplikacija za evidentiranje profesionalnih CS2 mečeva" styleClass="main-label"/>

    <HBox alignment="CENTER"
          spacing="20.0"
          xmlns="http://javafx.com/javafx/8.0.171"
          xmlns:fx="http://javafx.com/fxml">
        <Button text="Dodajte podatke" styleClass="main-button" onAction="#goToAdd" />
        <Button text="Izbrisite podatke" styleClass="main-button" onAction="#goToDelete" />
        <Button text="Promenite podatke" styleClass="main-button" onAction="#goToEdit" />
    </HBox>

    <Region VBox.vgrow="ALWAYS" />

    <Button alignment="BOTTOM_CENTER" text="Izađite iz programa" textAlignment="RIGHT" onAction="#exitApp" styleClass="exit-button">
        <graphic>
            <FontIcon iconLiteral="mdsal-exit_to_app:24:BLACK"/>
        </graphic>
    </Button>

    <padding>
        <Insets bottom="55.0"
                left="20.0"
                right="20.0"
                top="55.0"/>
    </padding>

    <stylesheets>
        <URL value="@css/main-window.css" />
    </stylesheets>
</VBox>
