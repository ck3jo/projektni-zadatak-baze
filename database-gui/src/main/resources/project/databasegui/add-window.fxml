        <Button styleClass="table-button" text='Dodajte podatke u tabelu "Turniri"' />
        <Button styleClass="table-button" text='Dodajte podatke u tabelu "Igrači"' />
        <Button styleClass="table-button" text='Dodajte podatke u tabelu "Transferi"' />
        <Button styleClass="table-button" text='Dodajte podatke u tabelu "Timovi"' />
        <Button styleClass="table-button" text='Dodajte podatke u tabelu "Treneri"' />
        <Button styleClass="table-button" text='Dodajte podatke u tabelu "Vesti"' />
        <Button styleClass="table-button" text='Dodajte podatke u tabelu "Autori"' />
    </VBox>

    <padding>
        <Insets bottom="160.0"
                left="20.0"
                right="20.0"
                top="20.0"/>
    </padding>

    <stylesheets>
        <URL value="@css/crud-window.css" />
    </stylesheets>
</VBox>