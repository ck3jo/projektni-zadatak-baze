<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import java.net.URL?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.layout.Region?>

<VBox spacing="20.0"
      xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="project.databasegui.EditController"
      id="main-window">

    <Button onAction="#returnToMain" styleClass="exit-button">
        <graphic>
            <FontIcon iconLiteral="mdsal-exit_to_app:24:BLACK" />
        </graphic>
    </Button>

    <TabPane tabClosingPolicy="UNAVAILABLE">
        <Tab text="Autori">
            <VBox styleClass="table-background">
                <Label styleClass="field-label" text="Ime"/>
                <TextField />

                <Label styleClass="field-label" text="Nadimak"/>
                <TextField />

                <Label styleClass="field-label" text="Prezime"/>
                <TextField />

                <padding>
                    <Insets bottom="10"
                            left="10"
                            right="10"
                            top="10"/>
                </padding>
            </VBox>
        </Tab>

        <Tab text="Igrači">
            <VBox styleClass="table-background">
                <Label styleClass="field-label" text="Ime"/>
                <TextField />

                <Label styleClass="field-label" text="Nadimak"/>
                <TextField />

                <Label styleClass="field-label" text="Prezime"/>
                <TextField />

                <Label styleClass="field-label" text="Datum rođenja"/>
                <TextField />

                <Label styleClass="field-label" text="Tim"/>
                <TextField />

                <Label styleClass="field-label" text="Rejting"/>
                <TextField />

                <Label styleClass="field-label" text="Major trofeji"/>
                <TextField />

                <Label styleClass="field-label" text="Major MVP medalje"/>
                <TextField />

                <padding>
                    <Insets bottom="10"
                            left="10"
                            right="10"
                            top="10"/>
                </padding>
            </VBox>
        </Tab>

        <Tab text="Mečevi">
            <VBox styleClass="table-background">
                <Label styleClass="field-label" text="Ime prvog tima"/>
                <TextField />

                <Label styleClass="field-label" text="Ime drugog tima"/>
                <TextField />

                <Label styleClass="field-label" text="Ime turnira"/>
                <TextField />

                <Label styleClass="field-label" text="Broj mapa"/>
                <TextField />

                <Label styleClass="field-label" text="Rezultat"/>
                <TextField />

                <Label styleClass="field-label" text="Datum meča"/>
                <TextField />

                <padding>
                    <Insets bottom="10"
                            left="10"
                            right="10"
                            top="10"/>
                </padding>
            </VBox>
        </Tab>

        <Tab text="Timovi">
            <VBox styleClass="table-background">
                <Label styleClass="field-label" text="Ime"/>
                <TextField />

                <Label styleClass="field-label" text="Logo"/>
                <TextField />

                <Label styleClass="field-label" text="Ranking pozicija"/>
                <TextField />

                <padding>
                    <Insets bottom="10"
                            left="10"
                            right="10"
                            top="10"/>
                </padding>
            </VBox>
        </Tab>

        <Tab text="Transferi">
            <VBox styleClass="table-background">
                <Label styleClass="field-label" text="Nadimak igrača"/>
                <TextField />

                <Label styleClass="field-label" text="Ime starog tima"/>
                <TextField />

                <Label styleClass="field-label" text="Ime novog tima"/>
                <TextField />

                <Label styleClass="field-label" text="Datum transfera"/>
                <TextField />

                <padding>
                    <Insets bottom="10"
                            left="10"
                            right="10"
                            top="10"/>
                </padding>
            </VBox>
        </Tab>

        <Tab text="Treneri">
            <VBox styleClass="table-background">
                <Label styleClass="field-label" text="Ime"/>
                <TextField />

                <Label styleClass="field-label" text="Nadimak"/>
                <TextField />

                <Label styleClass="field-label" text="Prezime"/>
                <TextField />

                <Label styleClass="field-label" text="Ime tima"/>
                <TextField />

                <padding>
                    <Insets bottom="10"
                            left="10"
                            right="10"
                            top="10"/>
                </padding>
            </VBox>
        </Tab>

        <Tab text="Turniri">
            <VBox styleClass="table-background">
                <Label styleClass="field-label" text="Ime"/>
                <TextField />

                <Label styleClass="field-label" text="Datum početka"/>
                <TextField />

                <Label styleClass="field-label" text="Datum završetka"/>
                <TextField />

                <Label styleClass="field-label" text="Mesto igranja"/>
                <TextField />

                <Label styleClass="field-label" text="Nagradni fond"/>
                <TextField />

                <Label styleClass="field-label" text="Veći turnir?"/>
                <CheckBox />

                <padding>
                    <Insets bottom="10"
                            left="10"
                            right="10"
                            top="10"/>
                </padding>
            </VBox>
        </Tab>

        <Tab text="Vesti">
            <VBox styleClass="table-background">
                <Label text="Naslov"/>
                <TextField />

                <padding>
                    <Insets bottom="10"
                            left="10"
                            right="10"
                            top="10"/>
                </padding>
            </VBox>
        </Tab>
    </TabPane>

    <padding>
        <Insets bottom="160.0"
                left="20.0"
                right="20.0"
                top="20.0"/>
    </padding>

    <stylesheets>
        <URL value="@css/crud-window.css" />
    </stylesheets>
</VBox>