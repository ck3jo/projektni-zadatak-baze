<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox alignment="TOP_CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ckejo.MainController" stylesheets="@css/main-style.css">
   <children>
      <Label fx:id="mainLabel" text="Aplikacija za evidentiranje profesionalnih CS2 utakmica" />

      <HBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" stylesheets="@css/main-style.css">
         <children>
            <Button fx:id="addData" text="Dodaj podatke" onAction="#loadAddData" />
            <Button fx:id="deleteData" text="Izbrisi podatke" onAction="#loadDeleteData" />
            <Button fx:id="editData" text="Izmeni podatke" onAction="#loadEditData" />
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="240.0" />
         </padding>
      </HBox>
   </children>
   <padding>
      <Insets bottom="150.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
